<component name="org.nuxeo.samples.vocabularies.l10n.ui">

    <extension target="org.nuxeo.ecm.directory.ui.DirectoryUIManager" point="directories">
        <directory name="customl10ncoverage" layout="customl10nxvocabulary_coverage"></directory>
    </extension>

    <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager" point="widgets">
        <widget name="customl10nxvocabulary_id" type="text">
            <labels>
                <label mode="any">label.vocabulary.entry.id</label>
            </labels>
            <translated>true</translated>
            <fields>
                <field>customl10nxvocabulary:id</field>
            </fields>
            <widgetModes>
                <mode value="edit">view</mode>
            </widgetModes>
            <properties widgetMode="edit">
                <property name="required">true</property>
            </properties>
        </widget>

        <widget name="customl10nxvocabulary_label_fr" type="text">
            <labels>
                <label mode="any">Français</label>
            </labels>
            <translated>true</translated>
            <fields>
                <field>customl10nxvocabulary:label_fr</field>
            </fields>
            <properties widgetMode="edit">
                <property name="size">50</property>
            </properties>
        </widget>

        <widget name="customl10nxvocabulary_label_en" type="text">
            <labels>
                <label mode="any">English</label>
            </labels>
            <translated>true</translated>
            <fields>
                <field>customl10nxvocabulary:label_en</field>
            </fields>
            <properties widgetMode="edit">
                <property name="size">50</property>
            </properties>
        </widget>

        <widget name="customl10nxvocabulary_label_es" type="text">
            <labels>
                <label mode="any">Español</label>
            </labels>
            <translated>true</translated>
            <fields>
                <field>customl10nxvocabulary:label_es</field>
            </fields>
            <properties widgetMode="edit">
                <property name="size">50</property>
            </properties>
        </widget>
        <widget name="customl10nxvocabulary_label_de" type="text">
            <labels>
                <label mode="any">Deutsch</label>
            </labels>
            <translated>true</translated>
            <fields>
                <field>customl10nxvocabulary:label_de</field>
            </fields>
            <properties widgetMode="edit">
                <property name="size">50</property>
            </properties>
        </widget>

        <widget name="customl10nxvocabulary_obsolete" type="template">
            <labels>
                <label mode="any">label.vocabulary.entry.obsolete</label>
            </labels>
            <translated>true</translated>
            <fields>
                <field>customl10nxvocabulary:obsolete</field>
            </fields>
            <properties mode="any">
                <property name="template">
                    /widgets/integer_yes_no_widget_template.xhtml
                </property>
            </properties>
        </widget>
    </extension>

    <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager" point="layouts">

        <layout name="customl10nxvocabulary_coverage">
            <templates>
                <template mode="any">/directory/directory_layout_template.xhtml</template>
            </templates>
            <rows>
                <row>
                    <widget>parent</widget>
                </row>
                <row>
                    <widget>customl10nxvocabulary_id</widget>
                </row>
                <row>
                    <widget>customl10nxvocabulary_label_en</widget>
                </row>
                <row>
                    <widget>customl10nxvocabulary_label_fr</widget>
                </row>
                <row>
                    <widget>customl10nxvocabulary_label_es</widget>
                </row>
                <row>
                    <widget>customl10nxvocabulary_label_de</widget>
                </row>
                <row>
                    <widget>customl10nxvocabulary_obsolete</widget>
                </row>
            </rows>
            <widget name="parent" type="selectOneDirectory">
                <labels>
                    <label mode="any">label.vocabulary.entry.parent</label>
                </labels>
                <translated>true</translated>
                <fields>
                    <field>customl10nxvocabulary:parent</field>
                </fields>
                <properties mode="any">
                    <property name="directoryName">customl10ncoverage</property>
                    <property name="localize">true</property>
                    <property name="dbl10n">true</property>
                </properties>
                <properties widgetMode="edit">
                    <property name="required">false</property>
                    <property name="displayObsoleteEntries">true</property>
                </properties>
            </widget>
        </layout>
    </extension>
</component>